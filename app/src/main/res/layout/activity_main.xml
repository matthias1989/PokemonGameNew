<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/main_layout">



        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu_container"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_layout"
        android:layout_marginTop="28dp"
        android:id="@+id/controller_container"
        >

        <RelativeLayout
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/move_controls"
            >
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_centerHorizontal="true"
                android:id="@+id/up"
                />
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_below="@id/up"
                android:layout_centerHorizontal="true"
                android:id="@+id/middle"
                />
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_toLeftOf="@id/middle"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/up"
                android:id="@+id/left"
                />
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_toRightOf="@id/middle"
                android:layout_below="@+id/up"
                android:layout_centerHorizontal="true"
                android:id="@+id/right"
                />
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_below="@id/middle"
                android:layout_centerHorizontal="true"
                android:id="@+id/down"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:id="@+id/menu_controls"
            android:layout_toRightOf="@+id/move_controls"
            >
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_centerHorizontal="true"
                android:id="@+id/x"
                android:text="X"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundedbutton"
                />
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_below="@id/x"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/x"
                android:id="@+id/y"
                android:text="Y"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundedbutton"
                />

            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_toRightOf="@id/x"
                android:layout_below="@+id/x"
                android:layout_centerHorizontal="true"
                android:id="@+id/a"
                android:text="A"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundedbutton"
                />
            <Button
                android:layout_width="@dimen/direction_keys_width"
                android:layout_height="@dimen/direction_keys_height"
                android:layout_below="@id/a"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/a"
                android:id="@+id/b"
                android:text="B"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundedbutton"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
